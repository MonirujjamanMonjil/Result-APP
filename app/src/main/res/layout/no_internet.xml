<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_marginBottom="10dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >


        <TextView
            android:id="@+id/tvTitleNoNet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Something Went Wrong!"
            android:textColor="#CCF80404"
            android:gravity="center"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginLeft="2dp"
            />



        <TextView
            android:id="@+id/tvDesNoNet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="আপনার মোবাইলে ইন্টারনেট সংযোগ Disconnect রয়েছে দয়া করে ইন্টারনেট কানেকশন ON করুন ।"
            android:textColor="#0A7A0E"
            android:textSize="14sp"
            android:textStyle="normal"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            />



            <ImageView

                android:id="@+id/lottieNoNet"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerInside"
                android:src="@drawable/no_wifi"
                android:layout_marginTop="30dp"
                tools:ignore="MissingClass"
                />




    </LinearLayout>


</LinearLayout>
